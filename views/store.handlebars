<h1>Lista de productos</h1>

<nav>
  Filtro por precio
  <select>
    <option value="" disabled="true" selected="true">Selecciona una opción...</option>
    <option value="60">Menor a $60</option>
    <option value="100">Menor a $100</option>
    <option value="130">Menor a $130</option>
    <option value="150">Menor a $150</option>
    <option value="170">Menor a $170</option>
    <option value="1000">Cualquier valor</option>

  </select>

<div class="order">
            <p class="order__rating"><strong>Popular</strong></p>
            <p class="order__low"><strong>Price: Low to high</strong></p>
            <p class="order__high"><strong>Price: High to low</strong></p>
        </div>
  <ul>
    <h4>GENDER</h4>
    <li class="filter__men"><a href="">Men</a></li>
    <li class="filter__women"><a href="">Women</a></li>
  </ul>
  <p>
    <label for="amount">Price range:</label>
    <input type="text" id="amount" readonly style="border:0; color:#f6931f; font-weight:bold;">
  </p>
  <div id="slider-range"></div>
  <button class="searchbtn">Buscar</button>


  <input type="text" class="search_input">
</nav>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Peso</th>
      <th>Calificación</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each list}}
      <tr>
        <td>{{ @index }}</td>
        <td>
          <a href="/products/{{ name }}/{{ _id }}">
            {{ name }}
          </a>
        </td>
        <td class="product__price">$ {{ price }}</td>
        <td>{{ weight }}</td>
        <td>{{ rating }}</td>
        <td>
          <button class="product__add_to_cart"
            data-img="{{ img }}"
            data-name="{{ name }}"
            data-price="{{ price }}"
            data-id="{{ _id }}">
            Agregar al carrito
          </button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

